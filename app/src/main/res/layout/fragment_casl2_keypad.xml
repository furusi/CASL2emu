<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listener"
            type="jp.ac.fukuoka_u.tl.casl2emu.android.Casl2KeypadFragment">
        </variable>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/table_button">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="C"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->listener.onKeyClickListener(12)}"/>

                <Button
                    android:id="@+id/button13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="D"
                    app:layout_constraintBottom_toTopOf="@+id/button9"
                    app:layout_constraintStart_toEndOf="@+id/button12"
                    android:onClick="@{()->listener.onKeyClickListener(13)}"/>

                <Button
                    android:id="@+id/button14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="E"
                    app:layout_constraintBottom_toTopOf="@+id/button10"
                    app:layout_constraintStart_toEndOf="@+id/button13"
                    android:onClick="@{()->listener.onKeyClickListener(14)}"/>

                <Button
                    android:id="@+id/button15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="F"
                    app:layout_constraintBottom_toTopOf="@+id/button11"
                    android:onClick="@{()->listener.onKeyClickListener(15)}"/>/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="8"
                    app:layout_constraintBottom_toTopOf="@+id/button4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:onClick="@{()->listener.onKeyClickListener(8)}"/>

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="9"
                    app:layout_constraintBottom_toTopOf="@+id/button5"
                    app:layout_constraintStart_toEndOf="@+id/button8"
                    android:onClick="@{()->listener.onKeyClickListener(9)}"/>

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="A"
                    app:layout_constraintBottom_toTopOf="@+id/button6"
                    app:layout_constraintStart_toEndOf="@+id/button9"
                    android:onClick="@{()->listener.onKeyClickListener(10)}"/>

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="B"
                    app:layout_constraintBottom_toTopOf="@+id/button7"
                    app:layout_constraintStart_toEndOf="@+id/button10"
                    android:onClick="@{()->listener.onKeyClickListener(11)}"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="4"
                    tools:layout_editor_absoluteX="8dp"
                    android:onClick="@{()->listener.onKeyClickListener(4)}"/>

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="5"
                    app:layout_constraintBottom_toTopOf="@+id/button1"
                    app:layout_constraintStart_toEndOf="@+id/button4"
                    android:onClick="@{()->listener.onKeyClickListener(5)}"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="6"
                    app:layout_constraintBottom_toTopOf="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/button5"
                    android:onClick="@{()->listener.onKeyClickListener(6)}"/>

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="7"
                    app:layout_constraintBottom_toTopOf="@+id/button3"
                    app:layout_constraintStart_toEndOf="@+id/button6"
                    android:onClick="@{()->listener.onKeyClickListener(7)}"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    tools:layout_editor_absoluteX="8dp"
                    android:onClick="@{()->listener.onKeyClickListener(0)}"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="1"
                    tools:layout_editor_absoluteX="96dp"
                    android:onClick="@{()->listener.onKeyClickListener(1)}"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button1"
                    android:onClick="@{()->listener.onKeyClickListener(2)}"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:text="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    android:onClick="@{()->listener.onKeyClickListener(3)}"/>
            </TableRow>
        </TableLayout>


    </android.support.constraint.ConstraintLayout>
</layout>
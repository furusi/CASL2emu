<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="inputText"
            type="com.example.furusho.casl2sim.InputText">
        </variable>
        <variable
            name="binaryEditScreen"
            type="com.example.furusho.casl2sim.BinaryEditScreen">
        </variable>
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.furusho.casl2sim.BinaryEditScreen">

    <TableLayout
        android:id="@+id/registerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:background="@color/material_grey_900"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="GR0"
                android:id="@+id/GR0"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_margin="1dp"
                android:layout_weight="0.25"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR1"
                android:id="@+id/GR1"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="0.2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR2"
                android:id="@+id/GR2"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR3"
                android:id="@+id/GR3"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textView3"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="GR0-7"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey_900">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR4"
                android:id="@+id/GR4"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR5"
                android:id="@+id/GR5"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR6"
                android:id="@+id/GR6"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:phoneNumber="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GR7"
                android:id="@+id/GR7"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:id="@+id/textview4"
                />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inputTextView"
        android:background="@color/material_grey_100"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@+id/registerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{inputText.rowNum}"
                android:id="@+id/textView2"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{inputText.inputText}"
                android:id="@+id/textView"
                android:clickable="true"
                app:onTouchListener="@{binaryEditScreen.showToastListener}"
                android:typeface="monospace"
                android:editable="true"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_step_over_button"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>

</RelativeLayout>
</layout>

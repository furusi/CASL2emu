<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="inputText"
            type="com.example.furusho.casl2emu.InputText">
        </variable>
        <variable
            name="contextDisplayScreen"
            type="com.example.furusho.casl2emu.ContextDisplayScreen">
        </variable>
        <variable name="casl2Register" type="com.example.furusho.casl2emu.Casl2Register"/>
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.furusho.casl2emu.ContextDisplayScreen">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:columnCount="11"
        android:rowCount="3"
        android:layout_alignParentTop="true"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_binary_edit_screen">


        <TextView
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_row="0"
            android:text="GR0-3" />

        <TextView
            android:id="@+id/gr0"
            android:layout_column="1"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_gravity="center"
            android:background="#C8E6C9"
            android:layout_row="0"
            android:textColor="#ff000000"
            android:text="@{Integer.toHexString(casl2Register.gr[0])}" />

        <TextView
            android:id="@+id/gr1"
            android:layout_column="2"
            android:textSize="18sp"
            android:layout_row="0"
            android:clickable="true"
            android:layout_gravity="center"
            android:text="@{Integer.toHexString(casl2Register.gr[1])}"
            android:background="#C8E6C9"
            />

        <TextView
            android:layout_column="3"
            android:textSize="18sp"
            android:background="#C8E6C9"
            android:clickable="true"
            android:id="@+id/gr2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="@{Integer.toHexString(casl2Register.gr[2])}" />

        <TextView
            android:textSize="18sp"
            android:layout_column="4"
            android:background="#C8E6C9"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/gr3"
            android:layout_width="wrap_content"
            android:text="@{Integer.toHexString(casl2Register.gr[3])}" />

        <TextView
            android:textSize="18sp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="PC"
            android:gravity="center"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="18sp"
            android:gravity="right"
            android:text="0x0003" />

        <TextView
            android:text="SP"
            android:layout_width="34dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_column="3"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:text="0x0016" />

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="18sp"
            android:text="GR4-7" />

        <TextView
            android:layout_column="1"
            android:layout_gravity="center"
            android:id="@+id/gr4"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_row="1"
            android:background="#C8E6C9"
            android:text="@{Integer.toHexString(casl2Register.gr[4])}" />

        <TextView
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="#C8E6C9"
            android:clickable="true"
            android:textSize="18sp"
            android:id="@+id/gr5"
            android:layout_row="1"
            android:text="@{Integer.toHexString(casl2Register.gr[5])}" />

        <TextView
            android:layout_column="3"
            android:textSize="18sp"
            android:id="@+id/gr6"
            android:clickable="true"
            android:background="#C8E6C9"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="@{Integer.toHexString(casl2Register.gr[6])}" />

        <TextView
            android:layout_column="4"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/gr7"
            android:clickable="true"
            android:background="#C8E6C9"
            android:layout_row="1"
            android:text="@{Integer.toHexString(casl2Register.gr[7])}" />

        <TextView
            android:layout_column="4"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="OF" />

        <TextView
            android:layout_column="5"
            android:textSize="18sp"
            android:layout_row="2"
            android:gravity="center"
            android:layout_width="19dp"
            android:text="0" />

        <TextView
            android:textSize="18sp"
            android:layout_column="6"
            android:layout_row="2"
            android:layout_gravity="center"
            android:text="SF" />

        <TextView
            android:textSize="18sp"
            android:layout_column="7"
            android:layout_width="19dp"
            android:gravity="center"
            android:background="#C8E6C9"
            android:layout_row="2"
            android:text="0" />

        <TextView
            android:layout_column="8"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:text="ZF" />

        <TextView
            android:layout_column="9"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_row="2"
            android:layout_width="25dp"
            android:text="0" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ButtonLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_step_over_button"
            android:id="@+id/button"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_run_button"
            android:id="@+id/button2"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@color/material_grey_100"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@id/gridLayout"
        android:layout_above="@id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:isScrollContainer="true"
            android:id="@+id/memory_list"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            >

        </ListView>
    </LinearLayout>
</RelativeLayout>
</layout>

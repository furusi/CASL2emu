<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="java.util.Locale"/>
        <import type="java.util.ArrayList"/>
        <variable
            name="contextDisplayScreen"
            type="com.example.furusho.casl2emu.ContextDisplayScreen">
        </variable>
        <variable name="casl2Register" type="com.example.furusho.casl2emu.Casl2Register"/>
        <variable
            name="casl2Memory"
            type="com.example.furusho.casl2emu.Casl2Memory"/>
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.furusho.casl2emu.ContextDisplayScreen">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:columnCount="11"
        android:rowCount="3"
        android:layout_alignParentTop="true"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_binary_edit_screen">


        <TextView
            android:layout_column="0"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="0"
            android:text="GR0" />

        <TextView
            android:id="@+id/gr0"
            android:layout_column="1"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_gravity="center"
            android:typeface="monospace"
            android:background="#C8E6C9"
            android:layout_row="0"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[0] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />

        <TextView
            android:layout_column="2"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="0"
            android:text="GR1" />
        <TextView
            android:id="@+id/gr1"
            android:layout_column="3"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="0"
            android:clickable="true"
            android:layout_gravity="center"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[1] &amp; 0xFFFF)}"
            android:background="#C8E6C9"
            android:layout_margin="1dp" />
        <TextView
            android:layout_column="4"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="0"
            android:text="GR2" />

        <TextView
            android:layout_column="5"
            android:textSize="18sp"
            android:background="#C8E6C9"
            android:clickable="true"
            android:typeface="monospace"
            android:id="@+id/gr2"
            android:layout_row="0"
            android:layout_gravity="center"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[2] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />
        <TextView
            android:layout_column="6"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="0"
            android:text="GR3" />

        <TextView
            android:textSize="18sp"
            android:layout_column="7"
            android:background="#C8E6C9"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/gr3"
            android:typeface="monospace"
            android:layout_width="wrap_content"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[3] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />

        <TextView
            android:textSize="18sp"
            android:layout_column="0"
            android:layout_row="2"
            android:typeface="monospace"
            android:text="@string/pr"
            android:gravity="center"
            android:layout_width="wrap_content" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/pc"
            android:typeface="monospace"
            android:background="#C8E6C9"
            android:clickable="true"
            android:textSize="18sp"
            android:gravity="end"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.pc &amp; 0xFFFF)}"
            android:layout_margin="1dp" />

        <TextView
            android:text="@string/sp"
            android:layout_width="34dp"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_row="2"
            android:typeface="monospace"
            android:layout_column="2"
            android:layout_columnSpan="1" />

        <TextView
            android:layout_row="2"
            android:textSize="18sp"
            android:id="@+id/sp"
            android:typeface="monospace"
            android:background="#C8E6C9"
            android:clickable="true"
            android:layout_column="3"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.sp &amp; 0xFFFF)}"
            android:layout_margin="1dp" />

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:typeface="monospace"
            android:textSize="18sp"
            android:text="GR4" />

        <TextView
            android:layout_column="1"
            android:layout_gravity="center"
            android:id="@+id/gr4"
            android:textSize="18sp"
            android:typeface="monospace"
            android:clickable="true"
            android:layout_row="1"
            android:background="#C8E6C9"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[4] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />
        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:typeface="monospace"
            android:textSize="18sp"
            android:text="GR5" />

        <TextView
            android:layout_column="3"
            android:layout_gravity="center"
            android:background="#C8E6C9"
            android:clickable="true"
            android:typeface="monospace"
            android:textSize="18sp"
            android:id="@+id/gr5"
            android:layout_row="1"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[5] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />
        <TextView
            android:layout_column="4"
            android:layout_row="1"
            android:typeface="monospace"
            android:textSize="18sp"
            android:text="GR6" />

        <TextView
            android:layout_column="5"
            android:textSize="18sp"
            android:id="@+id/gr6"
            android:clickable="true"
            android:background="#C8E6C9"
            android:typeface="monospace"
            android:layout_row="1"
            android:layout_gravity="center"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[6] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />
        <TextView
            android:layout_column="6"
            android:layout_row="1"
            android:typeface="monospace"
            android:textSize="18sp"
            android:text="GR7" />

        <TextView
            android:layout_column="7"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/gr7"
            android:clickable="true"
            android:typeface="monospace"
            android:background="#C8E6C9"
            android:layout_row="1"
            android:text="@{String.format(Locale.US ,&quot;%04X&quot;, (int)casl2Register.gr[7] &amp; 0xFFFF)}"
            android:layout_margin="1dp" />

        <TextView
            android:layout_column="4"
            android:textSize="18sp"
            android:layout_row="2"
            android:layout_gravity="center"
            android:typeface="monospace"
            android:text="@string/of" />
        <TextView
            android:layout_column="5"
            android:textSize="18sp"
            android:id="@+id/of"
            android:clickable="true"
            android:background="#C8E6C9"
            android:layout_row="2"
            android:typeface="monospace"
            android:gravity="center"
            android:layout_width="19dp"
            android:text="@{Integer.toString(casl2Register.fr[0])}"
            android:layout_margin="1dp" />

        <TextView
            android:textSize="18sp"
            android:layout_column="6"
            android:layout_row="2"
            android:typeface="monospace"
            android:layout_gravity="center"
            android:text="@string/sf" />

        <TextView
            android:textSize="18sp"
            android:layout_column="7"
            android:layout_width="19dp"
            android:typeface="monospace"
            android:id="@+id/sf"
            android:clickable="true"
            android:gravity="center"
            android:background="#C8E6C9"
            android:layout_row="2"
            android:text="@{Integer.toString(casl2Register.fr[1])}"
            android:layout_margin="1dp" />

        <TextView
            android:layout_column="8"
            android:textSize="18sp"
            android:typeface="monospace"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:text="@string/zf" />

        <TextView
            android:layout_column="9"
            android:textSize="18sp"
            android:id="@+id/zf"
            android:typeface="monospace"
            android:background="#C8E6C9"
            android:clickable="true"
            android:gravity="center"
            android:layout_row="2"
            android:layout_width="19dp"
            android:text="@{Integer.toString(casl2Register.fr[2])}"
            android:layout_margin="1dp" />


    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ButtonLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_step_over_button"
            android:id="@+id/stepbutton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_run_button"
            android:id="@+id/runbutton" />

        <Button
            android:text="@string/button_stp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/waitbutton"
            android:textColor="?attr/colorSwitchThumbNormal"
            android:background="?attr/colorAccent" />

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/runbuttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="実行画面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outputscreenbutton" />

    </LinearLayout>
    <LinearLayout
        android:background="@color/material_grey_100"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@id/gridLayout"
        android:layout_above="@id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_weight="1.0"
            android:isScrollContainer="true"
            android:id="@+id/memory_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >

        </ListView>
    </LinearLayout>


</RelativeLayout>
</layout>

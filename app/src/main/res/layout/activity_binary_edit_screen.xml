<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="inputText"
            type="com.example.furusho.casl2sim.InputText">
        </variable>
        <variable
            name="binaryEditScreen"
            type="com.example.furusho.casl2sim.BinaryEditScreen">
        </variable>
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.furusho.casl2sim.BinaryEditScreen">

    <TableLayout
        android:id="@+id/registerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:background="@color/material_grey_900"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="@string/first_row"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/gr0"
                android:id="@+id/GR0"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_margin="1dp"
                android:layout_weight="0.25"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr1"
                android:id="@+id/GR1"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr2"
                android:id="@+id/GR2"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr3"
                android:id="@+id/GR3"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="@string/registerview_space"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="@string/pc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hex_2bit_space"
                android:id="@+id/textView7"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView8"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="@string/sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hex_2bit_space"
                android:id="@+id/textView9"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:singleLine="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey_900">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="@string/second_row" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr4"
                android:id="@+id/GR4"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr5"
                android:id="@+id/GR5"
                android:textColor="@color/material_grey_900"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr6"
                android:id="@+id/GR6"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr7"
                android:id="@+id/GR7"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginRight="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:id="@+id/textview4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:id="@+id/textview5"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView10"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="OF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/textView11"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="SF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/textView13"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView14"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_span="1"
                android:text="ZF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/textView15"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:background="@color/material_grey_50"
                android:layout_marginTop="@dimen/table_line"
                android:layout_marginBottom="@dimen/table_line"
                android:layout_marginEnd="@dimen/table_line"
                android:layout_marginRight="@dimen/table_line"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inputTextView"
        android:background="@color/material_grey_100"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_below="@+id/registerView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{inputText.rowNum}"
                android:id="@+id/textView2"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@{inputText.inputText}"
                android:id="@+id/textView"
                android:clickable="true"
                app:onTouchListener="@{binaryEditScreen.showToastListener}"
                android:typeface="monospace"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_step_over_button"
            android:id="@+id/button"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_run_button"
        android:id="@+id/button2"
        android:layout_below="@+id/inputTextView"
        android:layout_alignRight="@+id/inputTextView"
        android:layout_alignEnd="@+id/inputTextView" />

</RelativeLayout>
</layout>

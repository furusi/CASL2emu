<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.furusho.casl2emu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.furusho.casl2emu.InputActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name="com.example.furusho.casl2emu.OutputScreen">
            <intent-filter>
                <action android:name="com.example.furusho.casl2sim.output" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.furusho.casl2emu.ContextDisplayScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.furusho.casl2emu.BaseActivity" />

        <service
            android:name="com.example.furusho.casl2emu.AppHandleService"
            android:exported="false"></service>
    </application>

</manifest>